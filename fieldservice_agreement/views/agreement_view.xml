<?xml version="1.0"?>
<odoo>
    <!-- Agreement Form View -->
    <record id="agreement_fsm_order_form_view" model="ir.ui.view">
        <field name="name">agreement.form.fsm.order.view</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement.partner_agreement_form_view"/>
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button name="action_view_service_order"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-map">
                    <field name="service_order_count"
                           widget="statinfo"
                           string="Service Orders"/>
                </button>
                <button name="action_view_fsm_equipment"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-laptop"
                        context="{'agreement_id': active_id}"
                        groups="fieldservice.group_fsm_equipment">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="equipment_count"
                                   widget="statinfo"
                                   nolabel="1"/>
                        </span>
                        <span class="o_stat_text">Equipments</span>
                    </div>
                </button>
            </div>
            <notebook position="inside">
                <page string="Field Service">
                    <group id="fsm">
                        <group id="fsm-left">
                            <field name="fsm_location_id"/>
                        </group>
                        <group id="fsm-right"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="agreement_search_fields" model="ir.ui.view">
        <field name="name">agreement.search.fields</field>
        <field name="model">agreement</field>
        <field name="type">search</field>
        <field name="inherit_id" ref="agreement.partner_agreement_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="/search/filter[1]" position="before">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="agreement_type_id"/>
                <field name="agreement_subtype_id"/>
                <field name="fsm_location_id"/>
            </xpath>
        </field>
    </record>

    <record id="agreement_end_date_kanban" model="ir.ui.view">
        <field name="name">agreement.end.date.kanban</field>
        <field name="model">agreement</field>
        <field name="inherit_id" ref="agreement.view_project_agreement_kanban"/>
        <field name="arch" type="xml">
            <field name="start_date" position="replace">
                <field name="end_date"/>
            </field>
            <xpath expr="//div[@class='o_kanban_record_subtitle text-muted']/t" position="replace">
                <t t-if="record.end_date.raw_value and record.end_date.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
            </xpath>
        </field>
    </record>

</odoo>
