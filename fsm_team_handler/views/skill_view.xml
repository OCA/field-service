<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="fsm_skills_form" model="ir.ui.view">
            <field name="name">Skill Form</field>
            <field name="model">fsm.skills</field>
            <field name="arch" type="xml">
                <form string="Tickets">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name"
                                       required="1" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fsm_skills_tree" model="ir.ui.view">
            <field name="name">Skill Tree</field>
            <field name="model">fsm.skills</field>
            <field name="arch" type="xml">
                <tree string="Skills">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="action_fsm_skills" model="ir.actions.act_window">
            <field name="name">Skills</field>
            <field name="res_model">fsm.skills</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('fsm_skills_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('fsm_skills_form')})
                          ]"
            />
        </record>

        <menuitem name="Skills"
                  id="fsm_skills_menu"
                  parent="fieldservice.config"
                  action="action_fsm_skills"
        />
    </data>
</odoo>
