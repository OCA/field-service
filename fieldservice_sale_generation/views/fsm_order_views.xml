<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fsm_order_form" model="ir.ui.view">
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form" />
        <field name="arch" type="xml">
            <header position="inside">
                <button id="action_generate_sale_order"
                        name="action_generate_sale_order" string="Generate Sale Order"
                        class="oe_highlight"
                        type="object"
                        groups="sales_team.group_sale_salesman"
                        context="{'create_quotation': True}"
                        attrs="{'invisible': [('stage_id', 'in', (%(fieldservice.fsm_stage_completed)d, %(fieldservice.fsm_stage_cancelled)d))]}" />
            </header>
            <notebook position="inside">
                <page string="Sales" name="sale_order">
                    <group>
                        <group>
                            <field name="sale_order_ids">
                                <tree>
                                    <field name="partner_id" />
                                    <field name="date_order" />
                                    <field name="state" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
