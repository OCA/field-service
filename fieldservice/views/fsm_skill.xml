<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Field Service Skill -->
    <record id="fsm_skill_tree_view" model="ir.ui.view">
        <field name="name">Skills</field>
        <field name="model">fsm.skill</field>
        <field name="arch" type="xml">
            <tree string="Skills">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_skill_form" model="ir.ui.view">
        <field name="name">fsm.skill.form</field>
        <field name="model">fsm.skill</field>
        <field name="arch" type="xml">
            <form string="Skill">
                <h1><field name="name"/></h1>
                <group>
                    <group>
                        <field name="parent_id"/>
                        <field name="skill_level"/>
                    </group>
                    <group>
                        <field name="active"/>
                    </group>
                </group>
                <field name="child_ids" string="Name">
                    <tree editable="bottom"  string="Child Skills">
                        <field name="name"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>

    <record id="action_fsm_skill" model="ir.actions.act_window">
        <field name="name">Skills</field>
        <field name="res_model">fsm.skill</field>
        <field name="view_id" ref="fsm_skill_tree_view"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a skill.
            </p>
            <p>
                Module not yet enabled.
            </p>
        </field>
    </record>
    
</odoo>