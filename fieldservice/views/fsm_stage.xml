<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Field Service Stage -->
    <record id="fsm_stage_tree_view" model="ir.ui.view">
        <field name="name">Stages</field>
        <field name="model">fsm.stage</field>
        <field name="arch" type="xml">
            <tree string="Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="state"/>
                <field name="is_default"/>
                <field name="fold"/>
            </tree>
        </field>
    </record>

    <record id="fsm_stage_form_view" model="ir.ui.view">
        <field name="name">Stage</field>
        <field name="model">fsm.stage</field>
        <field name="arch" type="xml">
            <form string="Stage">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="legend_priority"/>
                        </group>
                        <group>
                            <field name="state"/>
                            <field name="fold"/>
                            <field name="is_default"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                        <page name="teams" string="Used in Teams">
                            <field name="team_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fsm_stage" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="res_model">fsm.stage</field>
        <field name="view_id" ref="fsm_stage_tree_view"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Stage.
            </p>
            <p>
                Stages are the steps used in Team workflows.
            </p>
        </field>
    </record>

</odoo>
