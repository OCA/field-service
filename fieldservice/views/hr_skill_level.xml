<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Field Service Skill Level -->
    <record id="hr_skill_level_tree_view" model="ir.ui.view">
        <field name="name">Skill Level</field>
        <field name="model">hr.skill.level</field>
        <field name="arch" type="xml">
            <tree string="Skill Level">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_skill_level_form_view" model="ir.ui.view">
        <field name="name">Skill Level</field>
        <field name="model">hr.skill.level</field>
        <field name="arch" type="xml">
            <form string="Skill Level">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_skill_level" model="ir.actions.act_window">
        <field name="name">Skill Level</field>
        <field name="res_model">hr.skill.level</field>
        <field name="view_id" ref="hr_skill_level_tree_view"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a Skill Level.
            </p>
            <p>
                Module not yet enabled.
            </p>
        </field>
    </record>
    
</odoo>