<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_qrcode">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <p t-field="o.name" />
                        <p t-field="o.lot_id.name" />
                        <p t-field="o.product_id.categ_id.name" />
                        <img
                        t-att-src="image_data_uri(o.company_id.logo)"
                        width="120"
                    /><br />
                        <img t-att-src="image_data_uri(o.qrcode)" />
                    </div>
                </t>
            </t>
    </template>
</odoo>
