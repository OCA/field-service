<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--support ticket form-->
        <record id="fs_ticket_categ_form" model="ir.ui.view">
            <field name="name">Ticket CategoryForm</field>
            <field name="model">fsm.ticket.category</field>
            <field name="arch" type="xml">
                <form string="Ticket Category">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" required="1" />
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!--support ticket list view-->
        <record id="fs_ticket_categ_tree" model="ir.ui.view">
            <field name="name">Ticket Category</field>
            <field name="model">fsm.ticket.category</field>
            <field name="arch" type="xml">
                <tree string="Ticket Category">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <!--Support ticket action-->
        <record id="action_fsm_support_ticket_categ" model="ir.actions.act_window">
            <field name="name">Ticket Categories</field>
            <field name="res_model">fsm.ticket.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('fs_ticket_categ_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('fs_ticket_categ_form')})
                          ]"
            />

        </record>
        <!--Support ticket menu-->
        <menuitem id="fsm_ticket_categ_menu"
                  name="Ticket Categories"
                  parent="fieldservice.operations"
                  action="action_fsm_support_ticket_categ"
                  sequence="11" />
    </data>
</odoo>
