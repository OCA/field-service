<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--support ticket form-->
        <record id="fs_ticket_form" model="ir.ui.view">
            <field name="name">Support Ticket Form</field>
            <field name="model">fsm.support.ticket</field>
            <field name="arch" type="xml">
                <form string="Tickets">
                    <header>
                        <field name="state" widget="statusbar"
                               clickable="True"
                        />
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="ticket_subject" />
                            <h1>
                                <field name="ticket_subject" required="1" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="customer_id" />
                                <field name="customer_name" />
                                <field name="email" />
                                <field name="ticket_categ" />
                            </group>
                            <group>
                                <field name="person_id" />
                                <field name="ticket_date" />
                            </group>
                        </group>
                        <div>
                            <label for="description" />
                            <field name="description"
                                   widget="html" />
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!--support ticket list view-->
        <record id="fs_ticket_tree" model="ir.ui.view">
            <field name="name">Support Ticket Tree</field>
            <field name="model">fsm.support.ticket</field>
            <field name="arch" type="xml">
                <tree string="Tickets">
                    <field name="ticket_subject" />
                    <field name="customer_id" />
                    <field name="email" />
                    <field name="person_id" />
                    <field name="ticket_date" />
                </tree>
            </field>
        </record>

        <!--Support ticket action-->
        <record id="action_fsm_support_tickets" model="ir.actions.act_window">
            <field name="name">Tickets</field>
            <field name="res_model">fsm.support.ticket</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('fs_ticket_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('fs_ticket_form')})
                          ]"
            />

        </record>
        <!--Support ticket menu-->
        <menuitem id="fsm_ticket_menu"
                  name="Support Tickets"
                  parent="fieldservice.operations"
                  action="action_fsm_support_tickets"
                  sequence="10" />
    </data>
</odoo>
