<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--fsm stages form view-->
        <record id="fsm_stages_form" model="ir.ui.view">
            <field name="name">StagesForm</field>
            <field name="model">fsm.stages</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="sequence" invisible="1" />
                            </group>
                            <group>
                                <field name="fold" />
                                <field name="ref_editable" invisible="1" />
                                <field name="ref_name"
                                       attrs="{'readonly': [('ref_editable','=',False)]}"
                                />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--fsm stages tree view-->
        <record id="fsm_stages_tree" model="ir.ui.view">
            <field name="name">StagesTree</field>
            <field name="model">fsm.stages</field>
            <field name="arch" type="xml">
                <tree default_order="sequence asc">
                    <field name="sequence" widget="handle" />
                    <field name="name" />
                    <field name="ref_name" />
                </tree>
            </field>
        </record>

        <!--stage set form view-->
        <record id="fsm_stage_set_form" model="ir.ui.view">
            <field name="name">Stage Set Form</field>
            <field name="model">fsm.stage.sets</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Selected Stages">
                                <field name="stage_ids">
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="stage_id" />
                                                    <field name="start_stage" />
                                                    <field name="finish_stage" />
                                                </group>
                                                <group string="Permissions">
                                                    <field name="role_everyone" />
                                                    <field name="role_admin"
                                                        attrs="{'readonly': [('role_everyone', '=', True)]}"
                                                    />
                                                    <field name="role_manager"
                                                           attrs="{'readonly': [('role_everyone', '=', True)]}" />
                                                    <field name="role_team_lead"
                                                           attrs="{'readonly': [('role_everyone', '=', True)]}"/>
                                                    <field name="role_emp"
                                                           attrs="{'readonly': [('role_everyone', '=', True)]}"/>
                                                </group>
                                            </group>
                                            <div>
                                                <label for="conditions" string="Conditions" />
                                                <br />
                                                <field name="conditions"
                                                       style="width:80%;"
                                                       placeholder="[('field1', '=', value1), ('field2', '=', value2)]"
                                                />
                                                <br />
                                                <button name="check_domain"
                                                        string="Check"
                                                        type="object"
                                                        />
                                            </div>
                                            <div>
                                                <p>
                                                    Use the following variables for constructing the domain.<br />
                                                    parent_id : parent of the current object,<br />
                                                    self : current object,<br />
                                                    self.state or parent_id.state : to access the stage of the corresponding records.<br />
                                                </p>
                                            </div>
                                        </sheet>
                                    </form>
                                    <tree default_order="sequence asc">
                                        <field name="sequence" widget="handle" />
                                        <field name="stage_id" />
                                        <field name="start_stage" />
                                        <field name="finish_stage" />
                                        <field name="conditions" />
                                        <field name="role_everyone" />
                                        <field name="role_admin" />
                                        <field name="role_manager" />
                                        <field name="role_team_lead" />
                                        <field name="role_emp" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!--stage set tree view-->
        <record id="fsm_stage_set_tree" model="ir.ui.view">
            <field name="name">Stage Set Tree</field>
            <field name="model">fsm.stage.sets</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                </tree>
            </field>
        </record>
        <!--stages action-->
        <record id="action_fsm_stages" model="ir.actions.act_window">
            <field name="name">Stages</field>
            <field name="res_model">fsm.stages</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree, form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('fsm_stages_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('fsm_stages_form')})
                          ]"
            />

        </record>
        <!--stage set action-->
        <record id="action_fsm_stage_sets" model="ir.actions.act_window">
            <field name="name">Stage Set</field>
            <field name="res_model">fsm.stage.sets</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree, form</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('fsm_stage_set_tree')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('fsm_stage_set_form')})
                          ]"
            />

        </record>
        <!--stage set menu-->
        <menuitem parent="fieldservice.config" id="fsm_stage_sets"
                  action="action_fsm_stage_sets" sequence="4" />
        <!-- stages menu-->
        <menuitem parent="fieldservice.config" id="fsm_stages"
                  action="action_fsm_stages" sequence="5" />
    </data>
</odoo>