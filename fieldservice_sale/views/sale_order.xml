<odoo>
    <record id="view_order_form_inherit_sale_fieldservice" model="ir.ui.view">
        <field name="name">sale.order.form.sale.fieldservice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="groups_id" eval="[(4, ref('fieldservice.group_fsm_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button
                    type="object"
                    name="action_view_fsm_order"
                    class="oe_stat_button"
                    icon="fa-map"
                    attrs="{'invisible': [('fsm_order_count', '=', 0)]}"
                    groups="fieldservice.group_fsm_user"
                >
                    <field
                        name="fsm_order_count"
                        widget="statinfo"
                        string="FSM Orders"
                    />
                </button>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="fsm_location_id" />
            </xpath>
        </field>
    </record>

    <record id="view_order_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='currency_id']" position="after">
                <field name="fsm_location_id" string="location" optional="hidden" />
            </xpath>
        </field>
    </record>

    <record id="view_quotation_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='currency_id']" position="after">
                <field name="fsm_location_id" string="location" optional="hidden" />
            </xpath>
        </field>
    </record>

    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//search/field[@name='team_id']" position="after">
                <field
                    name="fsm_location_id"
                    string="location"
                    filter_domain="[('order_line.fsm_location_id', 'ilike', self)]"
                />
            </xpath>
        </field>
    </record>

</odoo>
