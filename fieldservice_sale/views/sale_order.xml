<odoo>
    <record id="view_order_form_inherit_sale_fieldservice" model="ir.ui.view">
        <field name="name">sale.order.form.sale.fieldservice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button type="object"
                        name="action_view_fsm_order"
                        class="oe_stat_button"
                        icon="fa-tasks"
                        attrs="{'invisible': [('fsm_order_count', '=', 0)]}"
                        groups="fieldservice.group_fsm_user">
                    <field name="fsm_order_count" widget="statinfo" string="FSM Orders"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="fsm_location_id"/>
            </xpath>
            <xpath expr="//group[@name='technical']" position="after">
                <group string="Field Service Information" name="sale_fsm">
                    <field name="date_fsm_request"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
