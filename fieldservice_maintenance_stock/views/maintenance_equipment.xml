<odoo>

   <record id="hr_equipment_view_form_product_lot" model="ir.ui.view">
        <field name="name">hr.equipment.view.form.product.lot</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form" />
        <field name="arch" type="xml">
            <field name="is_fsm_equipment" position="after">
                <field name="product_id"/>
                <field name="lot_id" context="{'default_product_id': product_id, 'default_company_id': company_id}" domain="[('product_id', '=', product_id)]"/>
            </field>
            <field name="serial_no" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
        </field>
    </record>

</odoo>
