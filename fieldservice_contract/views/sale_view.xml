<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_order_form_inherit_sale_fieldservice_contract" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="groups_id" eval="[(4, ref('fieldservice.group_fsm_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='product_id']" position="before">
                <field name="commercial_partner_id" invisible="1" />
                <field name="fsm_location_id" />
            </xpath>
            <xpath expr="//form//field[@name='price_unit']" position="before">
               <field name="commercial_partner_id" invisible="1" />
               <field name="fsm_location_id" />
            </xpath>
            <xpath expr="//form//field[@name='recurring_rule_type']" position="before">
               <field name="invoice_policy" />
            </xpath>
        </field>
    </record>
</odoo>
