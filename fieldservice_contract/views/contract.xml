<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--Main FORM view-->
    <record id="contract_contract_form_view_fsm" model="ir.ui.view">
        <field name="name">contract.contract form view (fsm)</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view" />
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="fsm_location_id" />
                <field
                    name="invoiceable_stage_ids"
                    widget="many2many_tags"
                    options="{'no_open': True, 'no_create': True, 'no_create_edit': True}"
                />
            </field>

            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    type="object"
                    name="action_view_fsm_recurring"
                    class="oe_stat_button"
                    icon="fa-calendar"
                    string="FSM Recurring"
                />
                <button
                    type="object"
                    name="action_view_fsm_order"
                    class="oe_stat_button"
                    icon="fa-tasks"
                    string="FSM Order"
                />
            </xpath>
        </field>
    </record>
</odoo>
