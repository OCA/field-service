<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!--need to add cost related info to skills-->
        <record id="service_cost_skills" model="ir.ui.view">
            <field name="name">Service Costs For Skills</field>
            <field name="model">fsm.skills</field>
            <field name="inherit_id" ref="fsm_team_handler.fsm_skills_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Service Cost">
                            <field name="service_price"
                                   widget="one2many_tags">
                                <tree create="0" editable="bottom">
                                    <field name="name" readonly="1"/>
                                    <field name="cost" readonly="0"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>