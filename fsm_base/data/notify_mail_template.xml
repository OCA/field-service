<odoo>
    <data noupdate="1">
         <!--Template for customer notification-->
         <record id="notify_customer_mail" model="mail.template">
              <field name="name">Notify Customer</field>
              <field name="subject">Status</field>
              <field name="model_id" ref="fsm_base.model_fsm_compose_mail"/>
              <field name="auto_delete" eval="True"/>
              <field name="body_html"><![CDATA[<p>
                Hello,
                    This is to inform you that your job has been submitted to the
                    corresponding employee.
                </p>]]>
              </field>
         </record>
         <!--Template for assigned person notification -->
         <record id="notify_employee_mail" model="mail.template">
              <field name="name">Example e-mail template</field>
              <field name="subject">Status</field>
              <field name="model_id" ref="fsm_base.model_fsm_compose_mail"/>
              <field name="auto_delete" eval="True"/>
              <field name="body_html"><![CDATA[<p>
                Hello,
                This is to inform you that, you has been assigned a
                new task. Please complete it asap.
                </p>]]>
              </field>
       </record>
    </data>
</odoo>
