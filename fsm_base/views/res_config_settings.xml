<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_tickets" model="ir.ui.view">
        <field name="name">res.config.settings.form.tickets</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40"/>
        <field name="inherit_id"
               ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath position="after"
                   expr="//div[@data-key='fieldservice']/div[last()]" >
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_fsm_support_ticket"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Manage FSM Tickets"/>
                            <div class="text-muted">
                                Manage FSM Tickets
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_fsm_team_handler"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Manage FSM Teams"/>
                            <div class="text-muted">
                                Manage FSM Teams
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_fsm_task_handler"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label string="Enable Work-sets &amp; Work-items"/>
                            <div class="text-muted">
                                Enable Work-sets &amp; Work-items
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
