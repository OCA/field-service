<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fsm_frequency_form_view" model="ir.ui.view">
        <field name="model">fsm.frequency</field>
        <field name="inherit_id" ref="fieldservice_recurring.fsm_frequency_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='weekdays']" position="before">
                <div attrs="{'invisible': [('use_byweekday', '=', False)]}" name="weekdays">
                    <group>
                        <field name="use_planned_hour"/>
                    </group>    
               </div>           
               <div attrs="{'invisible': [('use_planned_hour', '=', False)]}" name="hours">
                    <group>
                        <field name="interval_frequency"/>
                        <field name="week_day"/>
                        <field name="planned_hour" widget="float_time"/>
                    </group>
               </div>           
           </xpath>   
        </field>
    </record>

   </odoo>
