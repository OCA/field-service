<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="support_ticket_fsm_user" model="ir.rule">
        <field name="name">Ticket: FSM User</field>
        <field name="model_id" ref="website_support.model_website_support_ticket"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('fieldservice.group_fsm_user'))]"/>
    </record>

    <record id="support_ticket_fsm_dispatcher" model="ir.rule">
        <field name="name">Ticket: FSM Dispatcher and Manager</field>
        <field name="model_id" ref="website_support.model_website_support_ticket"/>
        <field name="groups" eval="[(4, ref('fieldservice.group_fsm_dispatcher')),
                    (4, ref('fieldservice.group_fsm_manager'))]"/>
    </record>
</odoo>
